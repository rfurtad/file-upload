<p style="color: green"><%= notice %></p>

<h1>Images</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Link to Download</th>    
    <th>Link to Show</th>    
  </tr>  
  <% @images.each do |image| %>
  <tr>
    <td><%= image.name %></td>     
    <td><%= link_to 'Link', rails_blob_path(image.file, disposition: "attachment") %></td>
    <td><%= link_to "Show this image", image %></td>    
    </tr>
  <% end %>      

</table>
<%= link_to "New image", new_image_path %>
